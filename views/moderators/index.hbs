<div class="content mt-3">
    <div class="animated fadeIn">
        <div class="row">

            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <strong class="card-title">Dữ liệu</strong>
                    </div>
                    <div class="card-body">
                        <table id="bootstrap-data-table-export" class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th>Mã tài khoản</th>
                                    <th>Họ tên</th>
                                    <th>Email</th>
                                    <th>Số điện thoại</th>
                                    <th>Hành động</th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#each users}}
                                <tr>
                                    <th scope="row">{{this._id}}</th>
                                    <td>{{this.name}}</td>
                                    <td>{{this.email}}</td>
                                    <td>{{this.phone}}</td>
                                    <td>
                                        <div class="row">
                                            <div class="col-sm-3">
                                                <a style="color: green" class="fa fa-edit" href="/moderators/edit/{{this._id}}"
                                                    alt="Sửa"></a>
                                            </div>
                                            <div class="col-sm-3">
                                                <a style="color: red" class="fa fa-times" onclick="deleteMod('{{this._id}}')" href="#"
                                                    alt="Xoá"></a>
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                                {{/each}}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>


        </div>
    </div><!-- .animated -->
</div><!-- .content -->

<script src="/javascripts/users.js"></script>