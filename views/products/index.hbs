<div class="content mt-3">
    <div class="animated fadeIn">
        <div class="row">

            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <strong class="card-title">Dữ liệu</strong>
                    </div>
                    <div class="card-body">
                        <table id="bootstrap-data-table-export" class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th>Mã sản phẩm</th>
                                    <th>Thuơng hiệu</th>
                                    <th>Tên sản phẩm</th>
                                    <th>Số lượng</th>
                                    <th>Giá</th>
                                    <th>Hành động</th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#if data}}
                                {{#each data}}
                                <tr>
                                    <th scope="row">{{this._id}}</th>
                                    <td>{{this.brand}}</td>
                                    <td>{{this.name}}</td>
                                    <td>{{this.stock}}</td>
                                    <td>{{this.price}}</td>
                                    <td>
                                        <div class="row">
                                            <div class="col-sm-3">
                                                <a style="color: green" class="fa fa-edit" href="/product/edit/{{this._id}}"
                                                    alt="Sửa"></a>
                                            </div>
                                            <div class="col-sm-3">
                                                <a style="color: red" class="fa fa-times"
                                                    onclick="deleteProduct('{{this._id}}', '{{this.brand}}')" href="#" alt="Xoá"></a>
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                                {{/each}}
                                {{/if}}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>


        </div>
    </div><!-- .animated -->
</div><!-- .content -->